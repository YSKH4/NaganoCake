<h3>注文履歴詳細</h3>

  <h4>注文情報</h4>
  <%= form_with model: @order, url: orders_path, local: true do |f| %>
  <table border="1" width="100" height="60" cellpadding="5">
    <tr align="center">
      <th bgcolor="#d3d3d3">注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">配送先</th>
      <td>
        <%= @order.zip_code%><br>
        <%= @order.shipping_address %><br>
        <%= @order.shipping_name %>
      </td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">支払方法</th>
      <td><%= @order.payment_method_i18n%></td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">ステータス</th>
      <td><%= @order.status_i18n %></td>
    </tr>
  </table>
  <% end %>

   
  <%# total_amount += ordered_items %>

<h4>請求情報</h4>
   
  
  <table border="1" width="100" height="60" cellpadding="5">
    <tr align="center">
      <% total_price = 0 %> <!-- total_priceを初期化 -->
  <% @ordered_items.each do |ordered_item| %>
  <% total_price += ordered_item.unit_price*ordered_item.amount %> <!-- total_amountを更新 -->
  <% end %>
      <th bgcolor="#d3d3d3">商品合計</th>
      <td><%= total_price %></td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">配送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">ご請求額</th>
      <td><%= @order.billing_amount %></td>
    </tr>
  </table>
      <%# end %>
      
      

 <h4>注文内容</h4>

  <table border="1" width="500" height="60" cellpadding="5">
    <tr align="center">
      <th bgcolor="#d3d3d3">商品</th>
      <th bgcolor="#d3d3d3">単価（税込み）</th>
      <th bgcolor="#d3d3d3">個数</th>
      <th bgcolor="#d3d3d3">小計</th>
    </tr>
     <% total_amount = 0 %>
  <% @ordered_items.each do |ordered_item| %>
   <% total_amount += ordered_item.unit_price %>
    <tr align="center">
      <td><%= ordered_item.item.name %></td>
      <td><%= ordered_item.unit_price %></td>
      <td><%= ordered_item.amount %></td>
      <td><%= ordered_item.subtotal %></td>
    </tr>
     <% end %>
  </table>
 