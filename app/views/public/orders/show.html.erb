<h3>注文履歴詳細</h3>

  <h4>注文情報</h4>
  <%= form_with model: @order, url: orders_path, local: true do |f| %>
  <table border="1" width="100" height="60" cellpadding="5">
    <tr align="center">
      <th bgcolor="#d3d3d3">注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">配送先</th>
      <td><%= @order.zip_code%><%= @order.shipping_address %><%= @order.shipping_name %></td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">支払方法</th>
      <td><%= @order.payment_method_i18n%></td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">ステータス</th>
      <td><%= @order.status_i18n %></td>
    </tr>
  </table>
  <% end %>

   <% @合計金額 = 0 %>
  <% @合計金額 += @ordered_items.add_tax_price %>

<h4>請求情報</h4>
    <% @order.each do |order| %>

  <table border="1" width="100" height="60" cellpadding="5">
    <tr align="center">
      <th bgcolor="#d3d3d3">商品合計</th>
      <td><%= @合計金額 %></td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">配送料</th>
      <td>800</td>
    </tr>
    <tr align="center">
      <th bgcolor="#d3d3d3">ご請求額</th>
      <td><%= order.billing_amount %></td>
    </tr>
  </table>
      <% end %>

 <h4>注文内容</h4>

  <table border="1" width="500" height="60" cellpadding="5">
    <tr align="center">
      <th bgcolor="#d3d3d3">商品</th>
      <th bgcolor="#d3d3d3">単価（税込み）</th>
      <th bgcolor="#d3d3d3">個数</th>
      <th bgcolor="#d3d3d3">小計</th>
    </tr>
  <% @ordered_items.each do |ordered_item| %>
    <tr align="center">
      <td><%= ordered_item.item_id %></td>
      <td><%= ordered_item.unit_price %></td>
      <td><%= ordered_item.amount %></td>
      <td><%= ordered_item.item_id.subtotal %></td>
    </tr>
  </table>
  <% end %>