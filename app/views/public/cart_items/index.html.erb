<!--カートないアイテム-->
<p>ショッピングカート</p>
<div>
  <table border="1">
    <!--テーブルトップ-->
    <tr bgcolor="#efefef">
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
    <!--おしまい-->

    <!--カートない商品について-->
    <% @cart_items.each do |cart_item| %>
      <!--くりかえしごとにほしい商品情報をとりだす-->
      <% item = Item.find(cart_item.item_id) %>
      <!--合計表示用--空の配列に値段を入れていく-->
      <% @total_amount << (item.price * 1.10).round * cart_item.amount %>

      <tr>
        <td><%= item.name %></td>
        <td><%= (item.price * 1.10).round %></td>
        <td><%= cart_item.amount %></td>
        <td><%= (item.price * 1.10).round * cart_item.amount %></td>
        <td><%= "d" %></td>
      </tr>
    <% end %>
    <!--おしまい-->
</table>
</div>

<div>
  <%= link_to "買い物を続ける", items_path %>
  <table border="1">
    <tr>
      <td bgcolor="#efefef">合計金額</td>
      <td><%= @total_amount.sum %></td>
    </tr>
  </table>
</div>
<!--おしまい-->