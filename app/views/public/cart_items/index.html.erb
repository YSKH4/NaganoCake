<!--カートないアイテム-->
<p>ショッピングカート</p>
<div>
  <table border="1">
    <!--テーブルトップ-->
    <tr bgcolor="#efefef">
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
    <!--おしまい-->

    <!--カートない商品について-->
    <% @cart_items.each do |cart_item| %>
      <% item = Item.find(cart_item.item_id) %>
      <tr>
        <td><%= item.name %></td>
        <td><%= (item.price * 1.10).round %></td>
        <td><%= cart_item.amount %></td>
        <td><%= (item.price * 1.10).round * cart_item.amount %></td>
        <td><%= "d" %></td>
      </tr>
    <% end %>
    <!--おしまい-->
</table>
</div>
<!--おしまい-->