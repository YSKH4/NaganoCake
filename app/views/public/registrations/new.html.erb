<div class= "container">
  <div class="row">
    <div class="col mt-5">
      <h3 class="border-bottom"><strong>新規会員登録</strong></h3>
    </div>
  </div>
    <div class="row justify-content-center">
      <div class="col mt-3">
        <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <div class="row">
            <h5 class="col-3 ml-1 pr-1">
              <%= f.label :名前 %>
            </h5>
            <div class="col-4 mr-1">
              <%= f.label :last_name, "(姓)　" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: "form-control"  %>
            </div>
            <div class="col-4 mr-1">
              <%= f.label :first_name, "(名)　" %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子", class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <h5 class="col-3 ml-1 pr-1">
            <%= f.label :フリガナ %>
            </h5>
            <div class="col-4 mr-1">
              <%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ", class: "form-control"  %>
            </div>
            <div class="col-4 mr-1">
              <%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ", class: "form-control"  %>
            </div>
          </div>

          <div class="row">
            <h5 class="col-3 ml-1 pr-1">
            <%= f.label :email, "メールアドレス"%>
        　　</h5>
            <div class="col-5 md-1">
          　　  <%= f.email_field :email, autofocus: true, autocomplete:"email", placeholder: "abc@email.com", class: "form-control" %>
         　  </div>
          </div>

          <div class="row">
            <h5 class="col-3 ml-1 pr-1">
            <%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
        　   </h5>
            <div class="col-5 md-1">
          　　<%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code", placeholder: "0000000", class: "form-control"  %>
         　  </div>
          </div>

          <div class="row">
            <h5 class="col-3 ml-1 pr-1">
            <%= f.label :address, "住所" %>
        　   </h5>
            <div class="col-8 md-1">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control"  %>
         　  </div>
          </div>

          <div class="row">
            <h5 class="col-3 ml-1 pr-1">
            <%= f.label :telephone_number, "電話番号(ハイフンなし) "%>
         　  </h5>
            <div class="col-5 md-1">
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "00000000000", class: "form-control"  %>
         　  </div>
          </div>

          <div class="row mb-4">
            <h5 class="col-3 ml-1 pr-1">
            <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
            </h5>
            <div class="col-5 md-1">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
            </div>
          </div>


          <div class="row">
            <h5 class="col-3 ml-1 pr-1">
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
            </h5>
            <div class="col-5 md-1">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
            </div>
          </div>

          <div class="row justify-content-center">
            <h5 class="actions mt-2 text-center">
              <%= f.submit "新規登録",class: "button-39" %>
            </h5>
          </div>

        <% end %>
      </div>
    </div>
  <div class="row mt-5">
    <div class="col">
      <h3 class="border-bottom"><strong>すでに登録済の方</strong></h3>
    </div>
  </div>
  <div class="row mb-4">
    <h5 class="col mt-3 text-center">
      <%= link_to "こちら", new_customer_session_path, class:"link" %>からログインしてください。
    </h5>
  </div>
</div>