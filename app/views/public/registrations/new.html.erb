<div class= "container">
  <div class="row">
    <div class="col-3 mt-5">
      <h5 style="background-color:#d3d3d3">新規会員登録</h5>
    </div>
  </div>
  <div class="row">
    <div class="col mt-3">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

        <%= f.label :名前 %>
        <div class="field ">
          <%= f.label :last_name, "(姓)　" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
          <%= f.label :first_name, "(名)　" %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
        </div>

        <%= f.label :フリガナ %>
        <div class="field ">
          <%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %>
          <%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
        </div>

        <%= f.label :email, "メールアドレス"%>
    　　  <div class="field">
      　　  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     　  </div>

        <%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
    　　  <div class="field">
      　　<%= text_field :zip_code, autofocus: true, autocomplete: "zip_code", placeholder: "0000000" %>
     　  </div>

      　<%= f.label :address, "住所" %>
    　　  <div class="field">
      　　<%= text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
     　  </div>

     　　<%= f.label :telephone_number, "電話番号(ハイフンなし) "%>
    　　  <div class="field">
      　　<%= text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "00000000000" %>
     　  </div>

        <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <%= f.label :password_confirmation, "パスワード(確認用)" %>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

      <div class="actions mt-2">
        <%= f.submit "新規登録" %>
      </div>

    <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-3">
      <h5 style="background-color:#d3d3d3">すでに登録済の方</h5>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col mt-3 text-center">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>