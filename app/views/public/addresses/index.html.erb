<div class="container">
  <div class="row p-3">
    <div class="col">
      <h3 class="border-bottom"><strong>配送先登録/一覧</strong></h3>
    </div>
  </div>

  <div class="row p-4">
    <div class="col">
    <%=form_with model: @address, url: addresses_path, method: :post do |f| %>
    <table class='table table-hover table-inverse'>
      <tr>
        <td><%= f.label :zip_code, "郵便番号（ハイフンなし）", class: "mr-3" %></td>
        <td><%= f.text_field :zip_code, class: "mr-5" %></td>
      </tr>
      <tr>
        <td><%= f.label :shipping_address, "住所", class: "mr-3" %></td>
        <td><%= f.text_field :shipping_address, class: "mr-5", size: 60 %></td>
      </tr>
      <tr>
        <td><%= f.label :shipping_name, "宛名", class: "mr-3" %></td>
        <td><%= f.text_field :shipping_name, class: "mr-5" %></td>
      </tr>
        <td><%= f.submit'新規登録',class: "button-39" %></td>
    </table>
      <% end %>

     <h4>配送先一覧</h4>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>

        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.zip_code %></td>
          <td><%= address.shipping_address %></td>
          <td><%= address.shipping_name %></td>
          <td><%= link_to "編集する", edit_address_path(address.id), class: "button-39" %></td>
          <td><%= link_to '削除する', address_path(address.id), method: :delete, class: "button-39" %></td>
        </tr>
          <%end%>
       </table>
      </div>
    </div>
 </div>

