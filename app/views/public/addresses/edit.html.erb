 <h3>配送先編集</h3>


      <%=form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
      <table class='table table-hover table-inverse'>
      <tr>
        <td><%= f.label :zip_code, "郵便番号（ハイフンなし）", class: "mr-3" %></td>
        <td><%= f.text_field :zip_code, class: "mr-5" %></td>
        <td><%= f.label :shipping_address, "住所", class: "mr-3" %></td>
        <td><%= f.text_field :shipping_address, class: "mr-5" %></td>
        <td><%= f.label :shipping_name, "宛名", class: "mr-3" %></td>
        <td><%= f.text_field :shipping_name, class: "mr-5" %></td>
      </tr>
      <tr>
        <td><%= f.submit'変更内容を保存',class: "btn btn-primary" %></td>
      </tr>
      </table>
      <% end %>

