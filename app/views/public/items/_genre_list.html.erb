<!--ジャンル検索機能-->
<table>
  <tr>
    <th>ジャンル検索</th>
  </tr>
  <% genres.each do |genre| %>
    <tr>
      <td>
        <!--クリエパラメータジャンルidを指定-->
        <%= link_to items_path(genre_id: (genre.id)) do %>
          <%= genre.name%>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
