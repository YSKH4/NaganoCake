<div class="container">
  <div class="row m-3">
    <div class="col p-3">
      <h3 class="border-bottom"><strong>会員情報編集</strong></h3>
    </div>
  </div>
  <div class="row m-3">
    <div class="col-sm-11 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <%= render "public/shared/error_messages", resource: @customer %>

          <div class="form-group">
            <label for="customer_name">氏名</label>
            <div class="row">
              <div class="col">
                <%= f.text_field :last_name, class: "form-control block", id: "customer_name" %>
              </div>
              <div class="col">
                <%= f.text_field :first_name, class: "form-control block", id: "customer_name" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="customer_name_kana">フリガナ</label>
            <div class="row">
              <div class="col">
                <%= f.text_field :last_name_kana, class: "form-control block", id: "customer_name_kana" %>
              </div>
              <div class="col">
                <%= f.text_field :first_name_kana, class: "form-control block", id: "customer_name_kana" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="zip_code">郵便番号</label>
            <div class="row">
              <div class="col">
                <%= f.text_field :zip_code, class: "form-control block", id: "zip_code" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="address">住所</label>
            <div class="row">
              <div class="col">
                <%= f.text_field :address, class: "form-control block", id: "address" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="address">電話番号</label>
            <div class="row">
              <div class="col">
                <%= f.text_field :telephone_number, class: "form-control block", id: "telephone_number" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="address">メールアドレス</label>
            <div class="row">
              <div class="col">
                <%= f.email_field :email, class: "form-control block", id: "aemail" %>
              </div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col mt-2 mr-1">
              <%= f.submit "編集内容を保存", class: 'btn btn-light' %>
            </div>

            <div class="col mt-2 mr-1">
              <%= link_to '退会する', customers_confirm_withdraw_path, class: 'btn btn-light' %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>