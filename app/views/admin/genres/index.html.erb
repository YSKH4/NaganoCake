<div class="container">
  <div class="row">
    <div class="col">
      <h3 style="background-color:#d3d3d3">ジャンル一覧・追加</h3>
    </div>
  </div>
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

  <div class="row m-5">
    <div class="col">
      <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
          <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
          <td><%= f.text_field :name, class: "mr-5" %></td>
          <td><%= f.submit'新規登録',class: "btn btn-primary" %></td>
      <% end %>
    </div>
  </div>

  <th><h4 style="background-color:#d3d3d3" class= "row m-3">ジャンル一覧</h4></th>
    <div class="row m-3">
      <div class="col">
        <ol type="1">
          <% @genres.each do |genre| %>
          <div class="row m-3">
            <h6 class="col-3 "><li><%= genre.name %></li></h6>
            <h6 class="col-5 mr-5 "><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn-success" %></h6>
            <!--<div><%#= link_to 'Destroy', admin_genres_path(@genre), method: :delete, class: "btn btn-sm btn-danger" %></td>-->
          </div>
          <%end%>
        </ol>
      </div>
    </div>
</div>
