<div class="container">
  <div class="row my-3">
    <div class="col-3">
      <h4 style="background-color:#d3d3d3">注文履歴一覧</h4>
    </div>
  </div>
  <div class="row justify-content-center">
    <table class='table table-hover table-inverse'>
     <thead>
      <tr>
        <th>購入日時</th></th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
     </thead>
     <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.customer_id %></td>
          <td><%= order.order_detail.amount %></td>
          <td><%= order.status %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
  </div>
</div>