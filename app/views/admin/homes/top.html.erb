  <h3>注文履歴一覧</h3>
  <table class='table table-hover table-inverse'>
   <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
   </thead>
   <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= link_to order.full_name, admin_order_path(order.id)%></td>
        <td><%= order.amount %></td>
        <td><%= order.status %></td>
      </tr>
     <% end %>
    </tbody>
   </table>

