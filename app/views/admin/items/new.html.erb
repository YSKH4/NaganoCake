<h1>商品新規登録</h1>
<%= form_with model: @item do |f| %>
  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :item_name %>
  <h4>商品説明</h4>
  <%= f.text_area :caption %>
  <h4>ジャンル</h4>
  <%= f.select :genre_id, options_from_collection_for_select(Jenre.all, :id, :name) %>

   <h4>販売ステータス</h4>
  <%= f.radio_button :is_active, true %>
  <%= f.label :"販売中" %>

  <%= f.radio_button :is_active, false %>
  <%= f.label :"販売停止中" %>

  <%= f.submit '新規登録' %>
<% end %>