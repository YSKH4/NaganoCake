  <h1>会員一覧</h1>
  
  <div style= 'width: 80% ; margin: 0 auto;' >
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td><% if customer.is_deleted? %>
            <p class="text-success , font-weight-bold"><%= customer.is_deleted_text %></p>
            <% else %>
            <p class="text-secondary , font-weight-bold"><%= customer.is_deleted_text %></p>
            <% end %>
        </td>
      </tr>
        <% end %>
    </tbody>
  </table>
  </div>
  <div class= 'center' >
  <%= paginate @customers %>
  </div>