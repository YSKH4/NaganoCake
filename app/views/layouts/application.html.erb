
<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/8ad5b3c4dc.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class ="d-flex flex-column vh-100">
    <header>
      <nav class="navbar-nav">
        <div class="container">
          <div class="row">
          <a class="navbar-brand mr-auto" href="/"><span>Logo</span></a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!--<div class="collapse navbar-collapse" id="navbarNavDropdown">-->
          <div class="row">
            <ul class="navbar-nav ml-auto d-flex flex-row">
            <% if customer_signed_in? %>
              <li class="nav-item"><%= link_to "マイページ", customers_mypage_path, class: 'btn btn-light nav-link ml-2' %></li>
              <li class="nav-item"><%= link_to "商品一覧", items_path, class: 'btn btn-light nav-link ml-2' %></li>
              <li class="nav-item"><%= link_to "カート", cart_items_path, class: 'btn btn-light nav-link ml-2'%></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: 'btn btn-light nav-link ml-2' %></li>
            <% elsif admin_signed_in? %>
              <li class="nav-item"><%= link_to "商品一覧", admin_items_path, class: 'btn btn-light nav-link ml-2' %></li>
              <li class="nav-item"><%= link_to "会員一覧", admin_customers_path, class: 'btn btn-light nav-link ml-2' %></li>
              <li class="nav-item"><%= link_to "注文履歴一覧", admin_orders_path, class: 'btn btn-light nav-link ml-2'%></li>
              <li class="nav-item"><%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-light nav-link ml-2'%></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-light nav-link ml-2' %></li>
            <% else %>
              <li class="nav-item"><%= link_to "About", homes_about_path, class: 'btn btn-light nav-link ml-2' %></li>
              <li class="nav-item"><%= link_to "商品一覧", items_path, class: 'btn btn-light nav-link ml-2' %></li>
              <li class="nav-item"><%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-light nav-link ml-2' %></li>
              <li class="nav-item"><%= link_to "ログイン", new_customer_session_path, class: 'btn btn-light nav-link ml-2' %></li>
            <% end %>
            </ul>
          </div>
          </div>

          <% if customer_signed_in? %>
            <p class="m-1">ようこそ、<%= current_customer.last_name %> 様</p>
          <% end %>
          <!--</div>-->
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="row justify-content-cencer">
          <div class="col text-center">
          <p>Nagano Cake<br>
             address: 長野県長野市XXX<br>
             telephone-number: XXX-XXXX-XXXX<br>
             ©CopyRight Nagano-cake.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
